{
  "include": ["./src/ts/**/*.ts"],
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "es2016", "es2017", "dom" ],
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./typings/globals",
      "./node_modules/@types"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "exclude": [
    "/**/*",
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}